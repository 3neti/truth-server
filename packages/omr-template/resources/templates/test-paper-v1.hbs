<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Test Paper - {{template_id}}</title>
    <style>
        @page {
            size: {{layout}};
            margin: 15mm;
        }
        body {
            font-family: Arial, sans-serif;
            font-size: 11pt;
            line-height: 1.6;
            position: relative;
        }
        .fiducial {
            position: absolute;
            background: #000;
            width: 6mm;
            height: 6mm;
        }
        .fiducial-top-left {
            top: 10mm;
            left: 10mm;
        }
        .fiducial-top-right {
            top: 10mm;
            right: 10mm;
        }
        .fiducial-bottom-left {
            bottom: 10mm;
            left: 10mm;
        }
        .fiducial-bottom-right {
            bottom: 10mm;
            right: 10mm;
        }
        .header {
            text-align: center;
            margin-bottom: 20px;
            padding-bottom: 10px;
            border-bottom: 2px solid #000;
        }
        .student-info {
            margin-bottom: 20px;
            padding: 10px;
            border: 1px solid #ccc;
        }
        .question {
            margin-bottom: 25px;
            page-break-inside: avoid;
        }
        .question-number {
            font-weight: bold;
            font-size: 12pt;
            margin-bottom: 10px;
        }
        .option {
            display: flex;
            align-items: center;
            margin-left: 20px;
            margin-bottom: 8px;
        }
        .mark-box {
            width: 18px;
            height: 18px;
            border: 2px solid #000;
            margin-right: 10px;
            flex-shrink: 0;
        }
    </style>
</head>
<body>
    <!-- Fiducial Markers for Image Alignment -->
    <div class="fiducial fiducial-top-left"></div>
    <div class="fiducial fiducial-top-right"></div>
    <div class="fiducial fiducial-bottom-left"></div>
    <div class="fiducial fiducial-bottom-right"></div>

    <div class="header">
        <h1>{{document_type}}</h1>
        {{#if metadata}}
        <p>{{metadata.subject}} | {{metadata.exam_date}}</p>
        {{/if}}
    </div>

    <div class="student-info">
        <p><strong>Name:</strong> _________________________________</p>
        <p><strong>Student ID:</strong> _________________________________</p>
    </div>

    {{#each contests_or_sections}}
    <div class="question">
        <div class="question-number">{{this.number}}. {{this.text}}</div>
        {{#each this.options}}
        <div class="option">
            <div class="mark-box"></div>
            <span>{{this.label}}. {{this.text}}</span>
        </div>
        {{/each}}
    </div>
    {{/each}}

    {{#if barcode_base64}}
    <div style="position: absolute; bottom: 10mm; left: 50%; transform: translateX(-50%);">
        {{{barcode_base64}}}
    </div>
    {{/if}}

    <div style="margin-top: 40px; text-align: center; font-size: 9pt; border-top: 1px solid #ccc; padding-top: 10px;">
        <strong>Document ID: {{document_id}}</strong>
    </div>
</body>
</html>
