<!doctype html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Election Return {{qrMeta.code}}</title>
    <style>
        /* Print-optimized CSS */
        @page {
            size: A4;
            margin: 10mm;
        }
        
        body {
            font-family: 'Courier New', 'DejaVu Sans Mono', monospace;
            font-size: 9pt;
            line-height: 1.2;
            color: #000;
            margin: 0;
            padding: 0;
        }
        
        /* Page structure */
        .page {
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }
        
        .page-break {
            page-break-before: always;
        }
        
        /* Typewritten style header */
        .er-header {
            margin-bottom: 15px;
            text-align: left;
        }
        
        .er-title {
            font-size: 12pt;
            font-weight: bold;
            margin: 0 0 8px 0;
            text-transform: uppercase;
            letter-spacing: 1px;
        }
        
        .er-meta {
            font-size: 8pt;
            margin-bottom: 10px;
        }
        
        .er-meta span {
            margin-right: 20px;
        }
        
        /* Compact typewritten tables */
        .vote-tallies {
            margin-bottom: 15px;
        }
        
        .position-title {
            font-size: 9pt;
            font-weight: bold;
            margin: 10px 0 3px 0;
            text-transform: uppercase;
            text-decoration: underline;
        }
        
        .vote-table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 10px;
            font-size: 8pt;
        }
        
        .vote-table td {
            padding: 1px 0;
        }
        
        .candidate-cell {
            width: 95%;
            font-family: 'Courier New', 'DejaVu Sans Mono', monospace;
            white-space: nowrap;
        }
        
        .vote-cell {
            width: 5%;
            text-align: right;
            font-weight: bold;
            padding: 0 2px;
        }
        
        /* Compact signatures */
        .signatures {
            margin-top: 15px;
            font-size: 8pt;
        }
        
        .signature-line {
            margin: 3px 0;
            display: flex;
            justify-content: space-between;
            border-bottom: 1px dotted #666;
            padding-bottom: 2px;
        }
        
        .signature-name {
            font-weight: bold;
        }
        
        .signature-value {
            font-style: italic;
        }
        
        /* QR Code Pages */
        .qr-header {
            text-align: center;
            margin-bottom: 25px;
            padding-bottom: 15px;
            border-bottom: 2px solid #7c3aed;
        }
        
        .qr-header h2 {
            color: #6d28d9;
            font-size: 18pt;
            margin: 0 0 8px 0;
        }
        
        .qr-header p {
            margin: 0;
            color: #6b7280;
            font-size: 10pt;
        }
        
        /* QR Grid Layout - 5 columns Ã— 6 rows */
        .qr-grid {
            display: grid;
            grid-template-columns: repeat(5, 1fr);
            gap: 15mm;
            align-items: center;
            justify-items: center;
            padding: 10mm 0;
        }
        
        .qr-item {
            text-align: center;
            break-inside: avoid;
            max-width: 100px;
        }
        
        .qr-code {
            width: 80px;
            height: 80px;
            margin: 0 auto 8px;
            border: 1px solid #e5e7eb;
            padding: 4px;
            background: white;
        }
        
        .qr-code img {
            width: 100%;
            height: 100%;
            object-fit: contain;
        }
        
        .qr-code svg {
            width: 100%;
            height: 100%;
        }
        
        .qr-label {
            font-size: 9pt;
            font-weight: bold;
            color: #4b5563;
            margin: 0;
        }
        
        /* Responsive adjustments for fewer QR codes */
        .qr-grid.small-set {
            grid-template-columns: repeat(4, 1fr);
            gap: 20mm;
        }
        
        .qr-grid.small-set .qr-code {
            width: 100px;
            height: 100px;
        }
        
        /* Print optimizations */
        @media print {
            .page {
                min-height: auto;
            }
        }
    </style>
</head>
<body>
    <!-- PAGE 1: Election Return Summary -->
    <div class="page summary-page">
        <header class="er-header">
            <div class="er-title">ELECTION RETURN</div>
            
            <!-- Precinct Information -->
            <table style="width: 100%; margin: 10px 0; font-size: 8pt; border-collapse: collapse;">
                <tr><td style="font-weight: bold; width: 40%; padding: 1px 0;">ELECTION RETURN ID:</td><td style="padding: 1px 0;">{{tallyMeta.id}}</td></tr>
                <tr><td style="font-weight: bold; width: 40%; padding: 1px 0;">CODE:</td><td style="padding: 1px 0;">{{tallyMeta.code}}</td></tr>
                <tr><td style="font-weight: bold; width: 40%; padding: 1px 0;">PRECINCT:</td><td style="padding: 1px 0;">{{tallyMeta.precinct.code}}</td></tr>
                <tr><td style="font-weight: bold; width: 40%; padding: 1px 0;">LOCATION:</td><td style="padding: 1px 0;">{{tallyMeta.precinct.location_name}}</td></tr>
                <tr><td style="font-weight: bold; width: 40%; padding: 1px 0;">COORDINATES:</td><td style="padding: 1px 0;">{{tallyMeta.precinct.latitude}}, {{tallyMeta.precinct.longitude}}</td></tr>
                {{#if tallyMeta.precinct.closed_at}}<tr><td style="font-weight: bold; width: 40%; padding: 1px 0;">CLOSED AT:</td><td style="padding: 1px 0;">{{tallyMeta.precinct.closed_at}}</td></tr>{{/if}}
            </table>
            
            <!-- Voting Statistics -->
            <div style="margin: 15px 0 0 0; padding: 8px 0; border-top: 1px solid #666; border-bottom: 1px solid #666;">
                <div style="font-size: 8pt; font-weight: bold; margin-bottom: 5px;">VOTING STATISTICS</div>
                <table style="width: 100%; font-size: 7pt; border-collapse: collapse;">
                    <tr>
                        <td style="font-weight: bold; width: 20%; padding: 1px 0;">Watchers:</td>
                        <td style="width: 10%; padding: 1px 0; text-align: right;">{{tallyMeta.precinct.watchers_count}}</td>
                        <td style="width: 10%; padding: 1px 0;"></td>
                        <td style="font-weight: bold; width: 20%; padding: 1px 0;">Registered Voters:</td>
                        <td style="width: 10%; padding: 1px 0; text-align: right;">{{tallyMeta.precinct.registered_voters_count}}</td>
                        <td style="width: 30%; padding: 1px 0;"></td>
                    </tr>
                    <tr>
                        <td style="font-weight: bold; width: 20%; padding: 1px 0;">Actual Voters:</td>
                        <td style="width: 10%; padding: 1px 0; text-align: right;">{{tallyMeta.precinct.actual_voters_count}}</td>
                        <td style="width: 10%; padding: 1px 0;"></td>
                        <td style="font-weight: bold; width: 20%; padding: 1px 0;">Ballots in Box:</td>
                        <td style="width: 10%; padding: 1px 0; text-align: right;">{{tallyMeta.precinct.ballots_in_box_count}}</td>
                        <td style="width: 30%; padding: 1px 0;"></td>
                    </tr>
                    <tr>
                        <td style="font-weight: bold; width: 20%; padding: 1px 0;">Unused Ballots:</td>
                        <td style="width: 10%; padding: 1px 0; text-align: right;">{{tallyMeta.precinct.unused_ballots_count}}</td>
                        <td style="width: 10%; padding: 1px 0;"></td>
                        {{#if tallyMeta.precinct.spoiled_ballots_count}}
                            <td style="font-weight: bold; width: 20%; padding: 1px 0;">Spoiled Ballots:</td>
                            <td style="width: 10%; padding: 1px 0; text-align: right;">{{tallyMeta.precinct.spoiled_ballots_count}}</td>
                        {{else}}
                            <td style="width: 20%; padding: 1px 0;"></td>
                            <td style="width: 10%; padding: 1px 0;"></td>
                        {{/if}}
                        <td style="width: 30%; padding: 1px 0;"></td>
                    </tr>
                    {{#if tallyMeta.precinct.void_ballots_count}}
                    <tr>
                        <td style="font-weight: bold; width: 20%; padding: 1px 0;">Void Ballots:</td>
                        <td style="width: 10%; padding: 1px 0; text-align: right;">{{tallyMeta.precinct.void_ballots_count}}</td>
                        <td style="width: 10%; padding: 1px 0;"></td>
                        <td style="width: 20%; padding: 1px 0;"></td>
                        <td style="width: 10%; padding: 1px 0;"></td>
                        <td style="width: 30%; padding: 1px 0;"></td>
                    </tr>
                    {{/if}}
                </table>
            </div>
        </header>

        <!-- Vote Tallies -->
        <section class="vote-tallies">
            {{#groupBy tallyMeta.tallies key="position_code"}}
                <div class="position-title">{{key}}</div>
                <table class="vote-table">
                    {{#each items}}
                        <tr>
                            <td class="candidate-cell">
                                <div style="width: 100%; position: relative;">
                                    <span id="name-{{@index}}" style="background: white; padding-right: 3px; display: inline-block;">{{candidate_name}}</span>
                                    <span style="position: absolute; left: 0; right: 0; top: 0; color: #666; z-index: -1; overflow: hidden;">................................................................................................................................................................................................</span>
                                </div>
                            </td>
                            <td class="vote-cell">{{count}}</td>
                        </tr>
                    {{/each}}
                </table>
            {{/groupBy}}
        </section>

        <!-- Signatures Section -->
        <div style="margin-top: 20px; padding-top: 10px; border-top: 1px solid #333;">
            <div style="font-size: 9pt; font-weight: bold; margin-bottom: 8px; text-transform: uppercase;">SIGNATURES</div>
            {{#if tallyMeta.signatures}}
                {{#each tallyMeta.signatures}}
                    <div class="signature-line">
                        <span class="signature-name">{{name}} ({{role}})</span>
                        <span class="signature-value">{{signature}}</span>
                    </div>
                    <div style="font-size: 7pt; color: #666; margin: 1px 0 5px 0;">
                        ID: {{id}} | Signed: {{signed_at}}
                    </div>
                {{/each}}
            {{else}}
                <div class="signature-line">
                    <span class="signature-name">BOARD MEMBER 1</span>
                    <span class="signature-value">_________________________</span>
                </div>
                <div class="signature-line">
                    <span class="signature-name">BOARD MEMBER 2</span>
                    <span class="signature-value">_________________________</span>
                </div>
                <div class="signature-line">
                    <span class="signature-name">BOARD MEMBER 3</span>
                    <span class="signature-value">_________________________</span>
                </div>
            {{/if}}
        </div>
    </div>

    <!-- PAGE 2+: QR Code Sheets -->
    <div class="page-break"></div>
    
    <div class="page qr-page">
        <div style="width: 100%; max-width: 580px; margin: 10px auto; padding: 5px;">
            {{#each qrMeta.qr}}
                <div style="display: inline-block; width: 180px; height: 150px; margin: 1px 2px; vertical-align: top; position: relative;">
                    <!-- QR Number Label -->
                    <div style="position: absolute; top: 2px; left: 2px; background: rgba(255,255,255,0.9); color: #333; font-size: 10px; font-weight: bold; padding: 1px 3px; border-radius: 2px; z-index: 10;">{{inc @index}}</div>
                    {{#if (startsWith this "data:image/png")}}
                        <div style="width: 150px; height: 150px; position: absolute; top: 0px; left: 15px;">
                            <img src="{{this}}" width="150" height="150" alt="QR {{inc @index}}" style="display: block;" />
                        </div>
                    {{else if (includes this "data:image/svg+xml;base64")}}
                        <div style="width: 150px; height: 150px; position: absolute; top: 0px; left: 15px; overflow: hidden;">
                            <div style="width: 150px; height: 150px;">{{{this}}}</div>
                        </div>
                    {{else if (startsWith this "<?xml")}}
                        <div style="width: 150px; height: 150px; border: 2px solid orange; position: absolute; top: 0px; left: 15px; overflow: hidden;">
                            <div style="width: 150px; height: 150px;">{{{this}}}</div>
                        </div>
                    {{else}}
                        <div style="width: 150px; height: 150px; position: absolute; top: 0px; left: 15px; background: #f0f0f0; text-align: center; line-height: 150px;">
                            <p style="color: #666; margin: 0; font-size: 12px;">QR {{inc @index}}</p>
                        </div>
                    {{/if}}
                </div>
            {{/each}}
        </div>
    </div>
</body>
</html>
